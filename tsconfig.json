{
  "compilerOptions": {
    // File Layout
    "rootDir": ".",           // include root so prisma.config.ts works
    "outDir": "dist",

    // Environment Settings
    "module": "esnext",
    "target": "es2022",
    "types": ["bun-types", "node"],
    "lib": ["es2022"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    // Module/Interop Settings
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "moduleDetection": "force"
  },
  "include": ["src", "prisma.config.ts"],  // include prisma config explicitly
  "exclude": ["node_modules", "dist"]
}
